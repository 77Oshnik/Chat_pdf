# Server Configuration
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:5173

# MongoDB Configuration
# Replace <db_password> with your actual password
MONGO_URL=mongodb+srv://username:<db_password>@cluster0.xxxxx.mongodb.net/rag_saas?retryWrites=true&w=majority&appName=Cluster0

# JWT Configuration
# Generate a strong secret key for production
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_use_at_least_32_characters
JWT_EXPIRE=7d

# Redis Configuration (Redis Cloud from redis.io)
# Get these from your Redis Cloud dashboard
REDIS_HOST=your-redis-host.redis.io
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_TLS=true

# Cloudinary Configuration
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Pinecone Configuration
# Get these from https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=pdf-embeddings

# Google Gemini API Configuration
# Get this from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# Queue Configuration
QUEUE_CONCURRENCY=5
MAX_RETRIES=3

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf
